// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "top",
    "height": 35, // Remove for auto height
    "width": 1920,
    // "margin-top": 5,
    "spacing": 5, // Gaps between modules (4px)
    
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap",
		"mpris"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "idle_inhibitor",
        "backlight",
        "pulseaudio",
        // "backlight/slider",
        "keyboard-state",
        "network",
        "bluetooth",
        "battery",
        "clock",
        // "custom/power",
        "tray"
    ],
    // Modules configuration
    "hyprland/window": {
    	"rewrite": {
    	    "": "Desktop"
    	  }
    },
    "hyprland/workspaces": {
         "disable-scroll": false,
         "all-outputs": true,
         "warp-on-scroll": true,
         "format": "{icon}",
         "on-scroll-up": "hyprctl dispatch workspace e-1",
         "on-scroll-down": "hyprctl dispatch workspace e+1",
         "format-icons": {
         	 // Uncomment and add {icon} to "format" above to use icons in workspace indicator
             // "1": "ÔÑ†",
             // "2": "Ôâ®",
             // "3": "ÔÜù",
             // "4": "Ôéµ",
             // "5": "ÔÑ°",
             "urgent": "ÔÅ™",
             "active": "ÔÜí",
             "default": "ÔÑë"
         }
     },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "timezone": "Asia/Dubai",
        "tooltip-format": "<big>{:%Y %B}</big>\n<small>{calendar}</small>",
        "format-alt": "{:%d/%m/%Y}"
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon}",
        "tooltip-format": "{percent}%",
        "reverse-scrolling": 1,
        "on-click": "$HOME/.config/waybar/modules/brightness_toggle.sh",
        // "on-middle-click": "hyprsunset",
		"format-icons": ["üåë", "üåò", "üåó", "üåñ", "üåï"]	
	},
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        "format-wifi": "Ôá´ {signalStrength}%",
        "format-ethernet": "Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr}\n{essid}",
        "tooltip-format-disconnected": "disabled",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "alt",
        "on-click": "wifi toggle"
    },
    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "reverse-scrolling": 1,
        "max-volume": 100,
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-middle": "pavucontrol"
    },
    "custom/power": {
        "format" : "‚èª ",
        "on-click": "wlogout",
		"tooltip": false,
	},
	"backlight/slider": {
	    "min": 0,
	    "max": 100,
	    "orientation": "horizontal",
	    "device": "intel_backlight"
	},
	"bluetooth": {
		"format": "{icon}",
		"format-icons": {
			"disabled": "Ôäî x",
			"enabled": "Ôäî"
		},
		"tooltip": true,
		"tooltip-format": "{device_enumerate}",
		"on-click": "bluetooth toggle"
	},
	"mpris": {
		"format": "{status_icon} {title} {player_icon}",
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-click-middle": "playerctl previous",
        "player-icons": {
        	"default": "‚ñ∂",
        	"spotify": " ÔÜº"
        },
        "ignored-players": ["firefox"],
        "status-icons": {
        	"paused": "‚ñ∂",
        	"playing": "‚è∏"
        }
	}
}
